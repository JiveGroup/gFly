alias ll='ls -la'

alias build_app="CGO_ENABLED=0 go build -ldflags='-w -s' -o /app/build/app main.go"
alias build_artisan="CGO_ENABLED=0 go build -ldflags='-w -s' -o /app/build/artisan app/console/cli.go"

alias release_windows_64="GOOS=windows GOARCH=amd64 go build -o /app/build/app-amd64.exe *.go"
alias release_mac_amd64="GOOS=darwin GOARCH=amd64 go build -o /app/build/app-amd64-darwin *.go"
alias release_mac_arm64="GOOS=darwin GOARCH=arm64 go build -o /app/build/app-arm64-darwin *.go"
alias release_linux_amd64="GOOS=linux GOARCH=amd64 go build -o /app/build/app-amd64-linux *.go"
alias release_linux_arm64="GOOS=linux GOARCH=arm64 go build -o /app/build/app-arm64-linux *.go"